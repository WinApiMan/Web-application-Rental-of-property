@model RentalOfProperty.WebUserInterface.Models.Ad.AdsPageView

@{
    ViewData["Title"] = Localizer["RealEstateInBelarus"];
}

<div class="sticky-top container bg-light" style="z-index:2">
    <a asp-controller="Ads" asp-action="AdsByType" asp-route-adsTypeMenuItem="@AdsTypeMenu.LongTermAds" class="col-md-3 offset-md-1 text-center text-danger h3 mt-md-2">@Localizer["LongTermRent"]</a>
    <a asp-controller="Ads" asp-action="AdsByType" asp-route-adsTypeMenuItem="@AdsTypeMenu.DayilyAds" class="col-md-3 offset-md-1 text-center text-danger h3 mt-md-2">@Localizer["RentForADay"]</a>
    <a href="#" class="col-md-2 offset-md-1 text-center btn btn-success text-white h3 mt-md-2 pl-md-1">@Localizer["PostAnAd"]</a>
</div>

<div id="loadResult">
    @if (Model.AdViews.Count() != 0)
    {
        await Html.RenderPartialAsync("~/Views/Ads/_AdsPage.cshtml", Model);
    }
    else
    {
        <h4 class="text-center text-warning pt-5">@Localizer["AdsNotFound"]</h4>
    }
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
