@model RentalOfProperty.WebUserInterface.Models.User.EditView

@{
    ViewData["Title"] = Localizer["EditUserData"];
}

<link rel="stylesheet" href="~/css/Users/Users.css" />

<div class="p-x-1 p-y-3">
    <form asp-action="EditUserData" class="card card-block m-x-auto bg-faded form-width">
        <h4 class="m-b-1 text-xs-center">@Localizer["EditUserData"]</h4>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group input-group has-float-label">
            <input asp-for="FullName" class="form-control" placeholder=@Html.DisplayNameFor(model => model.FullName) />
            <label asp-for="FullName"></label>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group input-group has-float-label">
            <input asp-for="PhoneNumber" class="form-control" placeholder=@Localizer["PhoneExample"] />
            <label asp-for="PhoneNumber"></label>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="text-xs-center">
            <button class="btn btn-block btn-primary" type="submit">@Localizer["Edit"]</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
