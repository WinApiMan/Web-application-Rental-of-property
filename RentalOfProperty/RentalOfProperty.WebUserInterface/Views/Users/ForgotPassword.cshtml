@model RentalOfProperty.WebUserInterface.Models.User.ForgotPasswordView

@{
    ViewData["Title"] = Localizer["ForgotPassword"];
}


<div class="p-x-1 p-y-3" style="height:90vh">
    <form asp-action="ForgotPassword" class="card card-block m-x-auto bg-faded form-width">
        <h4 class="m-b-1 text-xs-center">@Localizer["ForgotPassword"]</h4>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group input-group has-float-label">
            <input asp-for="Email" class="form-control" placeholder=@Localizer["EmailExample"] />
            <label asp-for="Email"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="text-xs-center">
            <button class="btn btn-block btn-primary" type="submit">@Localizer["Restore"]</button>
        </div>
    </form>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
